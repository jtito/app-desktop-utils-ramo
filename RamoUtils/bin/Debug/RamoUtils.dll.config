<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <connectionStrings>
    <!-- Conexión SQL Server Intermedia -->
    <add name="SQLIntermedia" 
         connectionString="Server=TU_SERVIDOR_SQL;Database=TU_BD_INTERMEDIA;User Id=usuario;Password=contrasena;Connection Timeout=30;" 
         providerName="System.Data.SqlClient"/>
  </connectionStrings>
  
  <appSettings>
    <!-- ========================================== -->
    <!-- CONFIGURACIÓN SAP BUSINESS ONE DI API -->
    <!-- ========================================== -->
    
    <!-- Servidor SAP HANA -->
    <add key="SAP_Server" value="TU_SERVIDOR_HANA"/>
    
    <!-- Tipo de Servidor: dst_HANADB (9) -->
    <add key="SAP_DbServerType" value="dst_HANADB"/>
    
    <!-- Puerto HANA (típicamente 30015, 30013, etc.) -->
    <add key="SAP_DbPort" value="30015"/>
    
    <!-- Base de datos SAP (Ej: SBODEMO, SBOPROD) -->
    <add key="SAP_CompanyDB" value="TU_BD_SAP"/>
    
    <!-- Usuario SAP -->
    <add key="SAP_UserName" value="manager"/>
    
    <!-- Contraseña SAP (cifrar en producción) -->
    <add key="SAP_Password" value="tu_password"/>
    
    <!-- Usuario de la base de datos HANA -->
    <add key="SAP_DbUserName" value="SYSTEM"/>
    
    <!-- Contraseña de la base de datos HANA -->
    <add key="SAP_DbPassword" value="tu_db_password"/>
    
    <!-- Licencia Server (opcional, dejar vacío si no aplica) -->
    <add key="SAP_LicenseServer" value=""/>
    
    <!-- ========================================== -->
    <!-- CONFIGURACIÓN STORED PROCEDURES -->
    <!-- ========================================== -->
    
    <!-- Nombre del SP SQL para obtener facturas pendientes -->
    <add key="SQL_SP_FacturasPendientes" value="SP_ObtenerFacturasPendientes"/>
    
    <!-- Nombre del SP HANA para consultar stock -->
    <add key="HANA_SP_ConsultarStock" value="SP_ConsultarStockDisponible"/>
    
    <!-- Timeout para queries (segundos) -->
    <add key="QueryTimeout" value="60"/>
    
    <!-- ========================================== -->
    <!-- NOMBRES DE TABLAS SQL PERSONALIZABLES -->
    <!-- ========================================== -->
    
    <add key="SQL_TablaEncabezado" value="EncabezadoFacturas"/>
    <add key="SQL_TablaDetalle" value="DetalleFacturas"/>
    
  </appSettings>
</configuration>
